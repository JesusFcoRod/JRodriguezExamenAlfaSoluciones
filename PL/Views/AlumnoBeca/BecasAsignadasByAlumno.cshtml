@model ML.AlumnoBeca
@{
    ViewBag.Title = "BecasAsignadasByAlumno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Becas Asignadas </h2>

@using (Html.BeginForm("BecasNoAsignadasByAlumno", "AlumnoBeca", FormMethod.Get, new { enctype = "multipart/form-data" }))
{
    <div class="row">

        <div class="col-md-1" style="display: none;">
            @Html.TextBoxFor(model => model.Alumno.IdAlumno, new { @class = "hidden form-control", autocomplete = "off" })
        </div>

        <div class="col-md-2">
            @Html.LabelFor(model => model.Alumno.Nombre, "Alumno:")
            <div class="input-group mb-2">
                <span class="input-group-text"><i class="bi bi-controller"></i></span>
                @Html.TextBoxFor(model => model.Alumno.Nombre, new { @class = "form-control", @readonly = "true" })
            </div>
        </div>

        <div style="float:right;">
            <div class="row">
                <div class="glyphicon-up">
                    <div class="form-group">
                        <div class="col-md-3">
                            <input type="submit" value="Agregar Beca" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
}

<br />
<br />
<br />


<table class="table table-hover table-striped table-bordered table-responsive" id="table_usuarios">
    <thead>
        <tr class="table-secondary">
            <td style="text-align:center">Eliminar</td>
            <td style="display :none;">id</td>
            <td style="text-align:center">Beca</td>
        </tr>
    </thead>

    <tbody>
        @foreach (ML.AlumnoBeca alumnobeca in Model.AlumnosBecas)
        {
            <tr>
                <td style="text-align: center; vertical-align: middle;"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("DeleteBecaAsignada", "AlumnoBeca", new { idBeca = alumnobeca.Beca.IdBeca})"></a></td>
                <td style="display :none;"> </td>
                <td style="text-align:center">@alumnobeca.Beca.NombreBeca</td>

            </tr>
        }

    </tbody>
</table>